root = true

[*.rs]
charset=utf-8
end_of_line=lf
indent_size=4
indent_style=space
insert_final_newline=true
max_line_length=100
trim_trailing_whitespace=true

[*.toml]
end_of_line=lf
indent_size=2
indent_style=space
trim_trailing_whitespace=true

[*.md]
insert_final_newline=true
trim_trailing_whitespace=true

[*.yml]
end_of_line=lf
indent_size=2
indent_style=space

[*.sh]
end_of_line=lf
indent_size=2
indent_style=space
