    "@types/minimist": "^1.2.2",
    "@types/yargs": "^17.0.0",
    "minimist": "^1.2.5",
    "scale-codec": "^0.10.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
